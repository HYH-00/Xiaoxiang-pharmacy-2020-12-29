<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.Dao.SalesMountMapper">
    <insert id="insertSalesMount" parameterType="com.example.demo.Bean.SalesMount">
        insert into salesmount(type_,type,money,time) values (#{type_},#{type},#{money},#{time})
    </insert>
    <select id="querySalesMountByTime" parameterType="Integer" resultType="com.example.demo.Bean.SalesMount">
        select * from salesmount where time=#{time};
    </select>
</mapper>